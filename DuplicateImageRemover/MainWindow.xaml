<Window x:Class="DuplicateImageRemover.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Duplicate Image Remover" Height="500" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Icon="/app.png">
	<Grid>
		<Button Content="Select Directory" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="30" Margin="10" Click="SelectDirectory_Click"/>
		<TextBox Name="DirectoryPathTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="170,10,0,0" Height="30" VerticalContentAlignment="Center" IsReadOnly="True" Width="205"/>
		<Button Content="Check for Duplicates" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="30" Margin="10,50,0,0" Click="CheckDuplicates_Click"/>
		<ListBox Name="DuplicatesListBox" Margin="10,90,10,10"/>
		<Button Content="Delete Selected" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="150" Height="30" Margin="10" Click="DeleteSelected_Click"/>
	</Grid>
</Window>
